<%- include("partials/header") %>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label class="postTitle">Title</label>
        <input type="text" class="form-control" name="postTitle" placeholder="Write Title">

        <label class="postBody">Post</label>
        <textarea class="form-control" name="postBody" cols="30" rows="5"></textarea>
    </div>
    <button name="submit" class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer") %>